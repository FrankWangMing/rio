{
  "name": "@rio/layers",
  "description": "A Photoshop-like layers panel for your page editor",
  "keywords": [
    "wysiwyg",
    "html",
    "layers",
    "photoshop",
    "craftjs",
    "page-editor",
    "web-builder",
    "react"
  ],
  "version": "0.2.6",
  "author": "Prev Wong <prevwong@gmail.com>",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/types/index.d.ts",
  "type": "module",
  "exports":{
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "dev": "pnpm run start -w",
    "start": "cross-env NODE_ENV=development rollup -c",
    "build": "cross-env NODE_ENV=production ",
    "clean": "rimraf lib dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/prevwong/craft.js/"
  },
  "bugs": {
    "url": "https://github.com/prevwong/craft.js/issues"
  },
  "homepage": "https://github.com/prevwong/craft.js/",
  "dependencies": {
    "@rio/utils": "workspace:*",
    "react-contenteditable": "^3.3.7"
  },
  "devDependencies": {
    "@babel/core": "7.26.0",
    "@svgr/rollup": "8.1.0",
    "styled-components": "6.1.13",
    "@rio/typescript-config": "workspace:*"
  },
  "peerDependencies": {
    "@rio/core": "workspace:*",
    "react": "^16.8.0 || ^17 || ^18",
    "styled-components": ">= 6.1"
  }
}
